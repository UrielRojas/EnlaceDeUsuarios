<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBA31A"
    tools:context=".RegistroComerciantes">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="269dp"
        android:layout_height="369dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.674">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:text="Registro de Nuevos Comerciantes"
            android:textColor="#9A1A1C"
            android:textSize="16sp"
            android:textStyle="bold|italic" />

        <EditText
            android:id="@+id/Comercio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Nombre del comercio"
            android:inputType="textPersonName"
            android:textColor="#9A1A1C" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Direccion del Establecimiento"
            android:textColor="#9A1A1C"
            android:textSize="16sp"
            android:textStyle="bold|italic" />

        <EditText
            android:id="@+id/Calle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Calle y Numero"
            android:inputType="textPersonName"
            android:textColor="#9A1A1C" />

        <EditText
            android:id="@+id/Colonia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Colonia"
            android:inputType="textPersonName"
            android:textColor="#9A1A1C" />

        <EditText
            android:id="@+id/Municipio"
            style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Muncipio/Alcaldia"
            android:inputType="textPersonName"
            android:textColor="#9A1A1C" />

        <EditText
            android:id="@+id/Estado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Estado"
            android:inputType="textPersonName"
            android:singleLine="false"
            android:textColor="#9A1A1C" />

        <Button
            android:id="@+id/Acept"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aceptar"
            android:textColor="#FFD500"
            app:backgroundTint="#DF1E26" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="155dp"
        android:layout_height="158dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/registrocomer" />

</androidx.constraintlayout.widget.ConstraintLayout>