<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBA31A"
    tools:context=".Perfil_Comerciante">

    <TextView
        android:id="@+id/TituloC"
        android:layout_width="315dp"
        android:layout_height="43dp"
        android:layout_marginTop="40dp"
        android:text="Vista General Perfil Comerciante"
        android:textAllCaps="true"
        android:textColor="#DF1E26"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="327dp"
        android:layout_height="159dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TituloC"
        app:layout_constraintVertical_bias="0.529">

        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:text="Titular del Usuario:"
            android:textColor="#DF1E26"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/UsuarioN"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#FDD500"
            android:text="TextView"
            android:textColor="#DF1E26"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Direccion:"
            android:textColor="#DF1E26"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/DireccionN"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="#FDD500"
            android:text="TextView"
            android:textColor="#DF1E26"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/ComercioN"
        android:layout_width="145dp"
        android:layout_height="29dp"
        android:text="textview"
        android:textColor="#DF1E26"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView7"
        app:layout_constraintVertical_bias="0.375" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="200dp"
        android:layout_height="162dp"
        android:layout_marginTop="36dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TituloC"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/imagencomercio" />

    <Button
        android:id="@+id/AceptarComercio"
        android:layout_width="305dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:text="Aceptar"
        android:textColor="#FDD500"
        android:textSize="12sp"
        android:textStyle="bold"
        app:backgroundTint="#DF1E26"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

    <Button
        android:id="@+id/Productos"
        android:layout_width="307dp"
        android:layout_height="38dp"
        android:layout_marginTop="12dp"
        android:background="#DF1E26"
        android:text="Agregar Productos"
        android:textAllCaps="true"
        android:textColor="#FDD500"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AceptarComercio"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/Lista"
        android:layout_width="307dp"
        android:layout_height="38dp"
        android:layout_marginTop="12dp"
        android:background="#DF1E26"
        android:text="Ver lista de productos"
        android:textAllCaps="true"
        android:textColor="#FDD500"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AceptarComercio"
        app:layout_constraintVertical_bias="0.466" />

</androidx.constraintlayout.widget.ConstraintLayout>